

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:gravity = "top"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal= "50dp"
        android:contentDescription="@string/app_name"
        android:id="@+id/main_scanImage" />

    <Button
        android:text="@string/main_pair_button"
        android:background = "@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:layout_marginHorizontal= "50dp"
        android:id="@+id/main_pair_button"
        />
    <Button
        android:text="@string/main_scan_button"
        android:background = "@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:layout_marginHorizontal= "50dp"
        android:enabled="false"
        android:id="@+id/main_scan_button" 
        />
    <CheckBox
        android:text="@string/main_beep_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:layout_marginHorizontal= "50dp"
        android:checked="true"
        android:id="@+id/main_sound_checkbox" />
    <TextView
        android:text="@string/main_volume_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "5dp"
        android:layout_marginHorizontal= "75dp"
        android:id="@+id/main_volume_text" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "5dp"
        android:layout_marginHorizontal= "75dp"
        android:max="100"
        android:progress="50"
        android:id="@+id/main_volume_seekbar" />

</LinearLayout>